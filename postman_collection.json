{
  "info": {
    "name": "Postman Demo API Collection",
    "description": "Classroom collection for REST API exercises",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    }
  ],
  "item": [
    {
      "name": "List All Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        },
        "description": "Get all users with optional query parameters for filtering, sorting, and pagination"
      },
      "response": []
    },
    {
      "name": "List Users with Query Parameters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/users?limit=2&offset=0&role=student&sort=name:asc",
          "host": ["{{baseUrl}}"],
          "path": ["users"],
          "query": [
            {
              "key": "limit",
              "value": "2",
              "description": "Number of users to return"
            },
            {
              "key": "offset",
              "value": "0",
              "description": "Number of users to skip"
            },
            {
              "key": "role",
              "value": "student",
              "description": "Filter by role (student or instructor)"
            },
            {
              "key": "sort",
              "value": "name:asc",
              "description": "Sort by field (name:asc, name:desc, createdAt:asc, createdAt:desc)"
            }
          ]
        },
        "description": "Example of using query parameters for filtering, sorting, and pagination"
      },
      "response": []
    },
    {
      "name": "Get Single User",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/users/11111111-1111-4111-8111-111111111111",
          "host": ["{{baseUrl}}"],
          "path": ["users", "11111111-1111-4111-8111-111111111111"]
        },
        "description": "Get a specific user by their UUID"
      },
      "response": []
    },
    {
      "name": "Create New User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alex Johnson\",\n  \"email\": \"alex@example.com\",\n  \"role\": \"student\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        },
        "description": "Create a new user with name, email, and role"
      },
      "response": []
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Asha Patel\",\n  \"role\": \"instructor\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/11111111-1111-4111-8111-111111111111",
          "host": ["{{baseUrl}}"],
          "path": ["users", "11111111-1111-4111-8111-111111111111"]
        },
        "description": "Update an existing user (partial updates allowed)"
      },
      "response": []
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/users/11111111-1111-4111-8111-111111111111",
          "host": ["{{baseUrl}}"],
          "path": ["users", "11111111-1111-4111-8111-111111111111"]
        },
        "description": "Delete a user by their UUID"
      },
      "response": []
    }
  ]
}